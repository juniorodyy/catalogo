<h1>Listing items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Group</th>
      <th>Genero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.description %></td>
        <td><%= item.group ? item.group.name: '' %></td>
        <td><%= item.Genero && @generos.select{|a|a[1] == item.Genero}.first[0] %></td>
        <td><%= link_to 'Mostrar', item %></td>
        <td><%= link_to 'Editar', edit_item_path(item) %></td>
        <td><%= link_to 'Destruir', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, class: 'btn btn-primary' %>
